{
  "name": "tdd-in-javascript",
  "description": "practicum in test-driven development",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.sh",
  "engines": {
    "node": ">=12",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.{js,jsx,html}\"",
    "lint": "esw \"src/**/*.{js,jsx}\" --quiet",
    "lint:watch": "npm run lint -- --watch",
    "prepare": "husky install",
    "tdd": "npm-run-all --parallel lint:watch test:watch",
    "test": "cross-env NODE_ENV=testing jest --forceExit --notify --detectOpenHandles src",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watchAll",
    "validate": "npm run format && npm run lint && npm run test:coverage"
  },
  "preinstall": "npx npm-force-resolutions",
  "resolutions": {
    "core-js": "^3.6.4",
    "file-entry-cache": "^5.0.1",
    "sinon": "^9.0.1",
    "source-map-resolve": "^0.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-throw-expressions": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@prettier/plugin-xml": "^0.13.0",
    "@types/jest": "^25.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^25.2.6",
    "bluebird": "^3.7.1",
    "cross-env": "^7.0.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-utils": "^1.4.3",
    "eslint-watch": "^6.0.1",
    "husky": "^6.0.0",
    "jest": "^25.2.7",
    "mock-req-res": "^1.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.2",
    "rimraf": "^2.6.2",
    "should": "^13.2.3",
    "testdouble": "^3.12.2",
    "testdouble-jest": "^2.0.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-throw-expressions",
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "forceCoverageMatch": [
      "**/*.spec.js"
    ],
    "notify": true,
    "notifyMode": "always",
    "restoreMocks": true,
    "setupFiles": [
      "<rootDir>/setup-jest.js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/+(*.)+(spec).+(js)"
    ],
    "testPathIgnorePatterns": [
      "dist/"
    ],
    "testURL": "http://localhost/",
    "verbose": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "htmlWhitespaceSensitivity": "css",
    "insertPragma": false,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "printWidth": 62,
    "proseWrap": "always",
    "quoteProps": "as-needed",
    "requirePragma": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "xmlWhitespaceSensitivity": "ignore"
  },
  "dependencies": {
    "immutable": "^4.0.0-rc.12",
    "immutable-ext": "^1.1.5"
  }
}
